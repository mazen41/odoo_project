<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_contract_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Engineering Services Contract</h2>
                        <p><strong>Contract Number:</strong> <span t-field="doc.name"/></p>
                        <p><strong>Date:</strong> <span t-field="doc.date_order" t-options='{"widget": "date"}'/></p>
                        <p><strong>Client:</strong> <span t-field="doc.partner_id.name"/></p>
                        <hr/>

                        <h3>1. Scope of Services</h3>
                        <p>This contract is between <span t-field="doc.company_id.name"/> and <span t-field="doc.partner_id.name"/> for the provision of engineering services as detailed below:</p>

                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th class="text-right">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.order_line" t-as="line">
                                    <td><span t-field="line.name"/></td>
                                    <td class="text-right"><span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="row">
                            <div class="col-4">
                                <strong>Total Amount:</strong> <span t-field="doc.amount_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </div>
                        </div>

                        <h3>2. Terms and Conditions</h3>
                        <p>
                            Payment is due within 30 days of the invoice date. All work will be performed to industry standards. 
                            This document constitutes the entire agreement between the parties.
                        </p>

                        <div class="row mt32">
                            <div class="col-6">
                                <strong>Client Signature:</strong>
                                <p>_________________________</p>
                                <p><span t-field="doc.partner_id.name"/></p>
                            </div>
                            <div class="col-6">
                                <strong>Company Signature:</strong>
                                <p>_________________________</p>
                                <p><span t-field="doc.company_id.name"/></p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>